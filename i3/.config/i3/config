mode "Instant Launch" {
    bindsym e exec emacsclient -c & i3-msg mode "default"
    bindsym a exec amarok & i3-msg mode "default"
    bindsym x exec keepassxc & i3-msg mode "default"
    bindsym f exec firefox & i3-msg mode "default"
    bindsym v exec vim -g & i3-msg mode "default"
    bindsym o exec okular & i3-msg mode "default"
    bindsym d exec dolphin & i3-msg mode "default"
    bindsym c exec chromium & i3-msg mode "default"
    bindsym m exec kmines & i3-msg mode "default"
    bindsym $mod+i mode "default" 
    bindsym Escape mode "default"
    bindsym Return mode "default"
}

bindsym $mod+i mode "Instant Launch"

# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym h resize shrink width 10 px or 10 ppt
        bindsym j resize grow height 10 px or 10 ppt
        bindsym k resize shrink height 10 px or 10 ppt
        bindsym l resize grow width 10 px or 10 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        #fine-grained mode
        #home row
        bindsym Shift+j resize grow height 1 px or 1 ppt
        bindsym Shift+h resize shrink width 1 px or 1 ppt
        bindsym Shift+k resize shrink height 1 px or 1 ppt
        bindsym Shift+l resize grow width 1 px or 1 ppt

        #arrow keys
        bindsym Shift+Left resize shrink width 1 px or 1 ppt
        bindsym Shift+Down resize grow height 1 px or 1 ppt
        bindsym Shift+Up resize shrink height 1 px or 1 ppt
        bindsym Shift+Right resize grow width 1 px or 1 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"

mode "moveit" {

    #move using semicolon
    bindsym Up move up 10px
    bindsym Left move left 10px
    bindsym Down move down 10px
    bindsym Right move right 10px

    #move using home row
    bindsym h move left 10px
    bindsym j move down 10px
    bindsym k move up 10px
    bindsym l move right 10px

    #press Mod+m or Esc or Enter to return to normal mode
    bindsym $mod+m mode "default"
    bindsym Escape mode "default"
    bindsym Return mode "default"

}
bindsym $mod+m focus floating; mode "moveit"

mode "move to monitor"{
  bindsym Shift+h move container to output left
  bindsym Shift+j move container to output down
  bindsym Shift+k move container to output up
  bindsym Shift+l container to output right

  bindsym h move workspace to output left
  bindsym j move workspace to output down
  bindsym k move workspace to output up
  bindsym l move workspace to output right

  #press Mod+m or Esc or Enter to return to normal mode
  bindsym $mod+m mode "default"
  bindsym Escape mode "default"
  bindsym Return mode "default"

}

bindsym $mod+Shift+m mode "move to monitor"


